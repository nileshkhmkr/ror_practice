<%= form_with model: @stock_item, url: "create" do |form| %>
	<%= render partial: "shared/form_errors", locals: { object: form.object } %>
	
	<%= form.label "Name" %>
	<%= form.text_field :name, required: true, placeholder: "Add Item Name" %>

	<%= form.label :price, "Price" %>
	<%= form.text_field :price, required: true, placeholder: "Add Item Price" %>

	<%= form.label :quantity, "Quantity" %>
	<%= form.text_field :quantity, required: true, min:1, placeholder: "Add number of items in stock" %>

    <%= form.label :image, "Image" %>
    <%= form.file_field :image, required: true %>

	<%= form.submit class: "btn btn-large btn-success" %>
<% end %>