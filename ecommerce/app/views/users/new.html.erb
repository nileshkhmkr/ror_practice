<div class="contact">
  <div class="container">
    <div class="row">
        <div class="col-md-12">
          <div class="titlepage">
              <h2>Register</h2>
          </div>
        </div>
    </div>
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <%= form_with model: @user, :html => {:class => 'main_form'}, url: signup_path do |form| %>
          <%= render partial: "shared/form_errors", locals: { object: form.object } %>
          <div class="col-md-12 ">
            <%= form.text_field :name, required: true, class: "contactus", placeholder: "Name" %>
          </div>
          <div class="col-md-12 ">
            <%= form.email_field :email, required: true, class: "contactus", placeholder: "Email" %>
          </div>
          <div class="col-md-12 ">
            <%= form.password_field :password, required: true, class: "contactus", placeholder: "Password" %>
          </div>
          <div class="col-md-12 ">
            <%= form.password_field :password_confirmation, required: true, class: "contactus", placeholder: "Confirm Password" %>
          </div>
          <div class="col-md-12 ">
            <%= form.submit "Sign Up", class: "send_btn" %>
          </div>
          <br>
          <div class="text-center">
            <%= link_to "Already have account? Log in here", login_path, method: :new %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
      