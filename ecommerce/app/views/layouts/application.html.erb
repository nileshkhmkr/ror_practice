    <!-- Javascript files-->
    <%= javascript_include_tag "jquery.min", "data-turbolinks-track" => true  %>
    <%= javascript_include_tag "popper.min", "data-turbolinks-track" => true  %>
    <%= javascript_include_tag "bootstrap.bundle.min", "data-turbolinks-track" => true  %>
    <%= javascript_include_tag "jquery-3.0.0.min", "data-turbolinks-track" => true  %>
    <!-- sidebar -->
    <%= javascript_include_tag "jquery.mCustomScrollbar.concat.min", "data-turbolinks-track" => true  %>
