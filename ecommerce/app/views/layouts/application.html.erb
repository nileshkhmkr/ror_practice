                              </li>
                            <% end %>
                        </ul>
                      </div>
                  </nav>
                </div>
            </div>
          </div>
      </div>
      <!-- end header inner -->
    </header>
    <!-- end header -->

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert alert-info" %>
